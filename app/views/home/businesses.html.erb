<div class="container top-space">
  <h1 class="text-center">Business Sponsors</h1>
  <div class='row'> 
    <div class='col-md-4 col-md-offset-4 col-xs-12 col-sm-12'>
      <h4 class='text-center'>Below you'll find businesses that have sponsored frames to support the cause of empowering people through Art. Check them out and show some love!</h4>
    </div>
  </div>
  <% @bizs.each do |biz| %>
    <div clas='row'> 
      <div class='col-md-4'> 
        <h2 class='text-center'><%= biz.business_name %></h2>
        <%= image_tag(biz.logo.url(:medium)) %>
        <br>
        <br>
        <div class="text-center">
          <ul class="social-icons">
            <% if !biz.facebook_url.empty? %>
              <li><%= link_to biz.facebook_url, "#{biz.facebook_url}/", 'target'=>"_blank", 'data-original-title'=>"Facebook", class: "social_facebook rounded-x" %></li>
            <% end %>

            <% if !biz.twitter_handle.empty? %>
              <li><%= link_to biz.twitter_handle, "https://twitter.com/#{biz.twitter_handle}/", 'target'=>"_blank", 'data-original-title'=>"Twitter", class: "social_twitter rounded-x" %></li>
            <% end %>
            
            <% if !biz.instagram_handle.empty? %>
              <li><%= link_to biz.instagram_handle, "https://instagram.com/#{biz.instagram_handle}/", 'target'=>"_blank", 'data-original-title'=>"Instagram", class: "social_instagram rounded-x" %></li>
            <% end %>

        </ul>
          <% if biz.website_url.empty? %>
            <p> Website: None</p>
          <% else %>
            <p> Website: <%= biz.website_url %></p>
          <% end %>

        </div>
      </div>
    </div>
  <% end %>
</div>
