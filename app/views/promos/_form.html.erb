<%= simple_form_for(@promo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">  
      <div class="col-md-4">  
        <%= f.input :twitter_handle, input_html: {class: "form-control", value: "@"} %>
        <%= f.input :band_name, input_html: {class: "form-control"} %>
        <%= f.input :youtube_channel, input_html: {class: "form-control"} %>
        <%= f.input :website_link, input_html: {class: "form-control"} %>
        <%= f.input :itunes_link, input_html: {class: "form-control"} %>
        <%= f.input :soundcloud_link, input_html: {class: "form-control"} %>
        <%= f.input :fb_link, input_html: {class: "form-control"} %>
        <%= f.input :insta_link, input_html: {class: "form-control"} %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit", class: 'btn btn-u' %>
  </div>
<% end %>
