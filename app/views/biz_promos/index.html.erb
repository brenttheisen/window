<p id="notice"><%= notice %></p>

<h1>Listing Biz Promos</h1>

<table>
  <thead>
    <tr>
      <th>Business name</th>
      <th>Twitter handle</th>
      <th>Website url</th>
      <th>Facebook url</th>
      <th>Instagram handle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @biz_promos.each do |biz_promo| %>
      <tr>
        <td><%= biz_promo.business_name %></td>
        <td><%= biz_promo.twitter_handle %></td>
        <td><%= biz_promo.website_url %></td>
        <td><%= biz_promo.facebook_url %></td>
        <td><%= biz_promo.instagram_handle %></td>
        <td><%= link_to 'Show', biz_promo %></td>
        <td><%= link_to 'Edit', edit_biz_promo_path(biz_promo) %></td>
        <td><%= link_to 'Destroy', biz_promo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

