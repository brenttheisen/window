<%= simple_form_for @biz_promo, html: {multipart: true} do |f| %>
  <% if @biz_promo.errors.any? %>
    <div id="error_explanation">
      <% @biz_promo.errors.full_messages.each do |message| %>
        <div class="alert alert-danger">  
          <%= message %>
        </div>
      <% end %>
    </div>
  <% end %>
  <h3 class='text-center'>Please Include Full Links (http &amp; https Included)</h3>
  <div class="form-inputs form-group">
    <div class="row form-group">  
      <div class="col-md-4 col-sm-12 col-xs-12 form-group">  
        <%= f.input :logo, as: :file, label: 'Logo (extensions: .png)' %>
        <%= f.input :business_name, placeholder: 'Windows Of Worlds', label: "Business Name", input_html: {class: "form-control"} %>
        <%= f.input :twitter_handle, placeholder: 'windowsofworlds', label: "Twitter Username", input_html: {class: "form-control"} %>
        <%= f.input :website_url, placeholder: 'http://www.windowsofworlds.com/', label: "Website URL", input_html: {class: "form-control"} %>
        <%= f.input :facebook_url, placeholder: 'https://www.facebook.com/windowsofworlds', label: "Facebook URL", input_html: {class: "form-control"} %>
        <%= f.input :instagram_handle, placeholder: 'windowsofworlds', label: "Instagram Username", input_html: {class: "form-control"} %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit", class: 'btn btn-u' %>
  </div>
<% end %>
